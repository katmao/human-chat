rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reads and writes to chat_interactions collection
    match /chat_interactions/{document} {
      allow read, write: if true;
    }
    
    // Allow reads and writes to voice_interactions collection
    match /voice_interactions/{document} {
      allow read, write: if true;
    }
    
    // Allow reads and writes to human_interactions collection (for logging)
    match /human_interactions/{document} {
      allow read, write: if true;
    }
    
    // Allow reads and writes to sessions collection and all its subcollections
    match /sessions/{sessionId} {
      allow read, write: if true;
      
      // Allow access to messages subcollection
      match /messages/{messageId} {
        allow read, write: if true;
      }
      
      // Allow access to presence subcollection
      match /presence/{participantId} {
        allow read, write: if true;
      }
    }
    
    // Keep your existing rules for other collections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 